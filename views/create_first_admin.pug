extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card
          .card-body
            h4 Create first Admin
            if error
              .alert.alert-danger= error
            form(method='POST' action='/create-first-admin')
              .mb-3
                label.form-label Username
                input.form-control(type='text' name='username' required)
              .mb-3
                label.form-label Name
                input.form-control(type='text' name='name')
              .mb-3
                label.form-label Password
                input.form-control(type='password' name='password' required)
              button.btn.btn-success(type='submit') Create Admin
