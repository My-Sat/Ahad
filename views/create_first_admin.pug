extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card
          .card-body
            h4 Create first Admin
            if error
              .alert.alert-danger= error
            form(method='POST' action='/create-first-admin')
              .mb-3
                label.form-label Username
                input.form-control(type='text' name='username' required)
              .mb-3
                label.form-label Name
                input.form-control(type='text' name='name')
              .mb-3
                label.form-label Password
                .password-field.position-relative
                  input#createFirstAdminPassword.form-control(type='password' name='password' required)
                  button.password-toggle(type='button', data-password-toggle, data-password-target='createFirstAdminPassword', aria-pressed='false', aria-label='Show password')
                    i.bi.bi-eye
              button.btn.btn-success(type='submit') Create Admin
