extends layout

block content
  .container
    .d-none(data-main-width='wide')
    .row.justify-content-center.align-items-center(style="min-height:72vh;")
      .col-12.col-md-6.col-lg-4
        .card.shadow-lg.dark-surface
          .card-body.p-4.dark-card-body
            .text-center.mb-3
              img(src='/images/AHAD LOGO.png', alt='Logo', style='max-height:56px;')
              h4.mt-3.mb-0.text-white Forgot Password
            p.text-muted-light.small Enter your phone number to receive an OTP.

            if error
              .alert.alert-danger.mt-3= error
            if info
              .alert.alert-success.mt-3= info

            form(method='post', action='/forgot-password', novalidate)
              .mb-3
                label.form-label.text-muted-light(for='phone') Phone
                input#phone.form-control.form-control-dark(type='text', name='phone', placeholder='e.g. 054xxxxxxx', required)
              button.btn.btn-primary.w-100(type='submit') Send OTP

            .text-center.mt-3
              a.small.text-muted(href='/login') Back to login
